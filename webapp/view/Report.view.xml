<mvc:View
    controllerName="com.crescent.app.stockoverviewreport.controller.Report"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:svm="sap.ui.comp.smartvariants"
>
    <!-- <Page id="page" title="{i18n>title}">
    </Page> -->
    <f:DynamicPage
        id="pageId"
        headerExpanded="{/headerExpanded}"
    >
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <svm:SmartVariantManagement
                        id="svm"
                        showExecuteOnSelection="true"
                    />
                </f:heading>
                <f:expandedContent>
                    <Label
                        id="expandedLabel"
                        text="No filters active"
                    />
                </f:expandedContent>
                <f:snappedContent>
                    <Label
                        id="snappedLabel"
                        text="No filters active"
                    />
                </f:snappedContent>
            </f:DynamicPageTitle>
        </f:title>

        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <fb:FilterBar
                        id="filterbar"
                        persistencyKey="myPersKey"
                        useToolbar="false"
                        search=".onSearch"
                        filterChange=".onFilterChange"
                        afterVariantLoad=".onAfterVariantLoad"
                    >
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem
                                name="pa_data_from"
                                label="From Date"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <DatePicker
                                        required="true"
                                        id="fromDate"
                                        change="onDateChange"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                name="pa_data_to"
                                label="To Date"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <DatePicker
                                        required="true"
                                        id="toDate"
                                        change="onDateChange"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                name="plant"
                                label="Plant"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <Input
                                        id="idPlantInput"
                                        showValueHelp="true"
                                        valueHelpRequest=".onOpenPlantDialog"
                                        placeholder="Select Plant"
                                        showClearIcon="true"
                                        required="true"
                                        liveChange=".onPlantClear"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                name="material"
                                label="Material"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <Input
                                        id="idMaterialInput"
                                        showValueHelp="true"
                                        valueHelpRequest=".onOpenMaterialDialog"
                                        placeholder="Select Material"
                                        showClearIcon="true"
                                        required="true"
                                        liveChange=".onMaterialClear"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <OverflowToolbar showSeparators="All">
                    <content>
                        <Title
                            text="List of Stocks"
                            level="H2"
                        />
                        <ToolbarSpacer />

                        <!-- <ToolbarSpacer /> -->
                        <Button
                            icon="sap-icon://sort"
                            press=".onSortShipToParty"
                            tooltip="Sort by Ship-to Party"
                            visible="false"
                        />
                        <Button
                            icon="sap-icon://excel-attachment"
                            press="onExport"
                            visible="false"
                        />
                    </content>
                </OverflowToolbar>
                <!-- Fixed Header Toolbar (Not inside ScrollContainer) -->

                <ScrollContainer
                    width="100%"
                    height="auto"
                    horizontal="true"
                    vertical="true"
                >
                    <Table
                        class="customTable"
                        id="table"
                        items="{
						path: 'TableDataModel>/'
					}"
                        fixedLayout="true"
                        sticky="ColumnHeaders"
                    >
                        <columns>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Material Group" class="columnHeaderBold"/>
                            </Column>
                            <Column
                                width="8rem"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Plant" class="columnHeaderBold"/>
                            </Column>
                            <Column
                                width="8rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="UOM" class="columnHeaderBold"/>
                            </Column>
                            <Column width="10rem">
                                <Text text="Opening Stock Qty" class="columnHeaderBold"/>
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Received Against PO Qty" class="columnHeaderBold"/>
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text
                                    text="Received From Prodn Ord Qty-Unrestricted" class="columnHeaderBold"
                                />
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text
                                    text="Received From Prodn Ord Qty-Rejection" class="columnHeaderBold"
                                />
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Foundary Return Qty" class="columnHeaderBold"/>
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Other Receipt Qty" class="columnHeaderBold"/>
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Transfer In Qty" class="columnHeaderBold"/>
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Sales Return Qty" class="columnHeaderBold"/>
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Delivery Against SO Qty" class="columnHeaderBold"/>
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Issue to Prodn Order Qty" class="columnHeaderBold"/>
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Other Issue Qty" class="columnHeaderBold"/>
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Return Against PO Qty" class="columnHeaderBold"/>
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Transfer Out Qty" class="columnHeaderBold"/>
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Total Received Qty" class="boldHeader"/>
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Total Issue Qty" class="columnHeaderBold"/>
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Closing Stock" class="columnHeaderBold"/>
                            </Column>
                        </columns>

                        <items>
                            <ColumnListItem
                                vAlign="Middle"
                                type="Navigation"
                                press=".onPressRow"
                            >
                                <cells>
                                    <Text text="{TableDataModel>MaterialGroupCombined}" />
                                    <Text text="{TableDataModel>Plant}" />
                                    <Text
                                        text="{TableDataModel>unit_of_measure}"
                                    />
                                    <Text
                                        text="{TableDataModel>open_stk_qty}"
                                    />
                                    <Text text="{TableDataModel>rcvd_po_qty}" />
                                    <Text
                                        text="{TableDataModel>rcvd_mo_qty_unsl}"
                                    />
                                    <Text
                                        text="{TableDataModel>rcvd_mo_qty_resl}"
                                    />
                                    <Text
                                        text="{TableDataModel>foundary_ret_qty}"
                                    />
                                    <Text text="{TableDataModel>oth_rcv_qty}" />
                                    <Text
                                        text="{TableDataModel>trnsf_in_qty}"
                                    />
                                    <Text text="{TableDataModel>SLS_RET_QTY}" />
                                    <Text
                                        text="{TableDataModel>SLS_DELV_QTY}"
                                    />
                                    <Text text="{TableDataModel>iss_prd_qty}" />
                                    <Text text="{TableDataModel>oth_iss_QTY}" />
                                    <Text text="{TableDataModel>RET_PO_QTY}" />
                                    <Text
                                        text="{TableDataModel>trans_out_qty}"
                                    />
                                    <Text
                                        text="{TableDataModel>totalrcvdqty}"
                                    />
                                    <Text
                                        text="{TableDataModel>totalissueqty}"
                                    />
                                    <Text text="{TableDataModel>closing_stk}" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </ScrollContainer>
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>
